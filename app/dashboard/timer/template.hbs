<div class="card">
  <div class="card-header card-header-grey cntr">
  <h2 class="card-title">Add Time for {{model.item}}</h2>
  </div>
    <div class="card-block">
    <p class="card-text">Start the timer to keep track of the amount of time (in minutes)
       you have spent {{model.item}}. Stop the timer and click the submit button to add the new time.</p>

    {{#if duration}}
      <div class="form-group d-flex justify-content-center">You logged {{moment-duration duration}}.</div>
      <div class="form-group timer-btn-container d-flex justify-content-around">
        {{!-- <button class="btn" {{action 'resume'}}>Resume</button> --}}
        <button class="btn btn-cancel" {{action 'reset'}}>Reset</button>
        <button class="btn btn-add" {{action 'save'}}>Submit</button>
      </div>
    {{else}}
      {{#if startTime}}
        <div class="form-group d-flex justify-content-center mc">
          {{moment-clock startTime interval=100}}
        </div>
        <div class="form-group timer-btn-container d-flex justify-content-around">
          <button class="btn btn-add" {{action 'pause'}}>Pause</button>
          <button class="btn btn-cancel" {{action 'stop'}}>Stop</button>
        </div>
      {{else}}
      <div class="form-group d-flex justify-content-center mc">
        {{moment-clock}}
      </div>
      <div class="form-group timer-btn-container d-flex justify-content-around">
        <button class="btn btn-add" {{action 'start'}}>Start Timer</button>
        {{#link-to "dashboard" class="btn btn-cancel"}}Cancel{{/link-to}}
      </div>
      {{/if}}
    {{/if}}
  </div>
</div>
