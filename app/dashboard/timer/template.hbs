<div class="card">
  <div class="card-header card-header-grey cntr">
  <h5 class="card-title">Add Time to {{model.item}}</h5>
  </div>
    <div class="card-block">
    <p class="card-text">Start the timer to keep track of the amount of time (in minutes)
       you have spent using {{model.item}}. Stop the timer and click the submit button to add the new time.</p>

    {{#if duration}}
      You logged {{moment-duration duration}}.
      <button {{action 'save'}}>Submit</button>
      <button {{action 'reset'}}>Reset</button>
      <button {{action 'resume'}}>Resume</button>
    {{else}}
      {{#if startTime}}

        {{moment-clock startTime interval=100}}

        <button {{action 'stop'}}>Stop</button>
        <button {{action 'pause'}}>Pause</button>
      {{else}}
        <button {{action 'start'}}>Start</button>
      {{/if}}
    {{/if}}
  </div>
</div>
