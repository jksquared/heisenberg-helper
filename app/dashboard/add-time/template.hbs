<div class="card">
  <div class="card-header card-header-grey cntr">
  <h2 class="card-title">Add Time for {{model.item}}</h2>
  </div>
    <div class="card-block">
    <p class="card-text">Enter the amount of time (in minutes)
       you spent {{model.item}}, and click the button to add the new time.</p>
       {{#with (changeset formValues validator) as |formValues|}}
         <form {{action "addTime" formValues on="submit"}}>
           <div class="form-group">
             {{#form-input class="form-control" type="number" label="add minutes" changeset=formValues property="time"}}{{/form-input}}
           </div>
         <div class="form-group timer-btn-container">
           <button type="submit" class="btn btn-add">Add New Time</button>
           {{#link-to "dashboard" class="btn btn-cancel"}}Cancel{{/link-to}}
         </div>
         </form>
       {{/with}}
  </div>
</div>
